---
layout: layouts/_base.njk
title: Our Work
headerText: Our Work
introductionBlurb: |
  Find more information about the work we do below.
---

<!-- prettier-ignore -->
{% import "components/introduction.njk" as introduction %}
<!-- prettier-ignore -->
{% import "components/logo.njk" as logo %}
<!-- prettier-ignore -->
{% import "components/menu.njk" as menu %}
<!-- prettier-ignore -->
{% import "components/footer.njk" as footer %}

<!-- prettier-ignore -->
{% macro event(text, href) %}
<li class="group">
  <a class="flex items-center justify-between py-4" href="{{ href }}">
    <h2
      class="font-display text-size-display lg:text-size-lg/display break-words"
    >
      {{ text }}
    </h2>
    {% if href.startsWith("/") %}
    <img
      class="hidden lg:block invisible group-hover:visible"
      src="/images/ui/in-arrow.svg"
      width="90"
      height="81"
    />
    {% else %}
    <img
      class="hidden lg:block invisible group-hover:visible"
      src="/images/ui/in-arrow.svg"
      style="transform: rotate(135deg)"
      width="90"
      height="81"
    />
    {% endif %}
  </a>
</li>
<!-- prettier-ignore -->
{% endmacro %}

<!-- prettier-ignore -->
{{ menu.render() }}
<!-- prettier-ignore -->
{{ introduction.render(headerText, introductionBlurb) }}
<section class="grid grid-cols-layout-4 lg:grid-cols-layout-16 py-8 bg-black text-white">
  <ol class="col-span-columns -my-4 divide-y">
    {{ event(text="PARTIAL COMMON OWNERSHIP", href="/our-work/pco")}}
    {{ event(text="EASEMENTS", href="/our-work/easements")}}
    {{ event(text="TRUSTS", href="/our-work/trusts")}}
    {{ event(text="OTHER", href="/our-work/other")}}
  </ol>
</section>
<!-- prettier-ignore -->
{{ footer.render() }}
<script>
  // prettier-ignore
  {% include "components/menu.js" %}
</script>
